/* pages/home/home.wxss */
.full-screen{
    width: 100%;
    height: 100%;
    position: relative;
}

.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    background-image: url("https://6a70-jprail-prod-23b737-1257787091.tcb.qcloud.la/promote-Iceland/Iceland-home-bg.jpg?sign=a776ffd81e47990a02c50640aa104747&t=1610994863");
    background-size: 100% 450rpx;
    background-repeat: no-repeat;
}

.title-container{
    width: 100%;
    height: 400rpx;
    margin-top: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.logo{
    width: 30%;
    height: 20%;
    position: relative;
    padding: 0 40rpx;
}

.text{
    font-size: 32rpx;
    color: #FFFFFF;
    padding: 30rpx 40rpx;
    text-shadow: 1px 1px 1px rgba(0,0,0,0.15);
}

.nav-container{
    width: 90%;
    height: 150rpx;
    padding: 30rpx;
}

.nav-icon-list{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 95%;
}

.icon-container{
    display: flex;
    flex-direction: column;
}

.nav-style{
    width: 150rpx;
    height: 150rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.icon{
    width: 50rpx;
    height: 60rpx;
    padding: 22rpx 0;
}

.icon-text{
    font-size: 25rpx;
    color: #191414;
    letter-spacing: 0.3px;
    text-align: center;
    font-weight: 700;
}

.card-content{
    width: 90%;
}

.card{
    position: relative;
    width: 100%;
    height: 300rpx;
    margin: 20rpx 0;
}

.card-bg{
    position: relative;
    width: 100%;
    height: 100%;
}

.card-text{
    position: relative;
    font-size: 30rpx;
    color: #FFFFFF;
    text-shadow: 0 1px 1px rgba(0,0,0,0.20);
}