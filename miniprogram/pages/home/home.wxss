/* pages/home/home.wxss */
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    background-image: url("https://6a70-jprail-prod-23b737-1257787091.tcb.qcloud.la/promote-Iceland/visitIceland-header.jpg?sign=5998eeab2667f6404f5517da3fbfea16&t=1611482224");
    background-size: 100% 450rpx;
    background-repeat: no-repeat;
}

.title-container{
    width: 100%;
    height: 400rpx;
    margin-top: 40rpx;
    position: relative;
}

.logo{
    width: 30%;
    height: 20%;
    position: relative;
    padding: 0 40rpx;
}

.text{
    align-self: center;
    font-size: 48rpx;
    font-weight: 600;
    color: #FFFFFF;
    text-shadow: 1px 1px 1px rgba(0,0,0,0.15);
    letter-spacing: 1.2rpx;
    line-height: 60rpx;
    width: 100%;
    text-align: center;
    position: absolute;
	left: 50%;
	top:50%; 
    transform:translate(-50%,-50%);
}

.nav-container{
    width: 90%;
    height: 150rpx;
    padding: 30rpx 0;
}

.nav-icon-list{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.icon-container{
    display: flex;
    flex-direction: column;
}

.nav-style{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.icon{
    width: 50rpx;
    height: 60rpx;
    padding: 22rpx 0;
}

.icon-text{
    font-size: 25rpx;
    color: #191414;
    letter-spacing: 0.3px;
    text-align: center;
    font-weight: 700;
}

.card-content{
    width: 90%;
}

.card{
    position: relative;
    width: 100%;
    height: 300rpx;
    margin: 20rpx 0;
}

.card-bg{
    position: relative;
    width: 100%;
    height: 100%;
}

.card-text{
    position: relative;
    font-size: 30rpx;
    color: #FFFFFF;
    text-shadow: 0 1px 1px rgba(0,0,0,0.20);
}