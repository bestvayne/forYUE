/* pages/sendMeeting/sendMeeting.wxss */
.picker-container{
    position: relative;
}
.picker{
    font-size: 28rpx;
    color: #727A84;
    letter-spacing: 0.35px;
    margin: 20rpx 30rpx;
    height: 100rpx;
    background: #FFFFFF;
    border: 1px solid #E0E0E0;
    display: flex;
    padding-left: 20rpx;
    align-items: center;
    position: relative;
}
.icon-drop-down{
    width: 58rpx;
    height: 58rpx;
    position: absolute;
    top: 40rpx;
    right: 60rpx;
}
.form-input{
    background: #FFFFFF;
    height: 100rpx;
    border: 1px solid #E0E0E0;
    font-size: 28rpx;
    color: #979DA6;
    letter-spacing: 0.35px;
    margin: 20rpx 30rpx;
    padding-left: 20rpx;
}
.meeting-btn{
    background: #78A4BF;
    height: 100rpx;
    font-size: 36rpx;
    color: #FFFFFF;
    letter-spacing: 1px;
    margin: 40rpx 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}