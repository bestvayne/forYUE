.page-container {
    width: 100%;
    display: flex;
    justify-content: center;
    background: #F1F1F1;
}

.card-container {
    background: #FFFFFF;
    font-size: 26rpx;
    color: #373D40;
    letter-spacing: 0;
    width: 90%;
    height: 280rpx;
    margin-top: 80rpx;
    display: flex;
    align-items: center;
    padding: 20rpx;
}

.image-container {
    width: 30%;
    height: 100%;
}

.image {
    width: 100%;
    height: 100%;
}

.exhibitor-info-container {
    width: 45%;
    height: 100%;
    padding: 0 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.exhibitors-name {
    font-size: 28rpx;
    color: #373D40;
    letter-spacing: 0;
    font-weight: 600;
}

.solid-black-3px {
    background: #373D40;
    width: 20%;
    height: 6rpx;
    margin: 20rpx 0;
}

.exhibitor-info {
    font-size: 26rpx;
    color: #666666;
    letter-spacing: 0.3px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.my-6 {
    margin: 6rpx 0;
}

.text-detail {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.meeting-status-container{
    width: 20%;
}

.meeting-status{
    background: #78A4BF;
    font-size: 24rpx;
    font-weight: 500;
    color: #FFFFFF;
    letter-spacing: 0.3px;
    text-align: center;
    padding: 10rpx;
}