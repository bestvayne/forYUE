/* pages/iceland-video/iceland-video.wxss */
.exhibitors-video-container{
    width: 100vw;
    height: 40%;
}
.video{
    width: 100%;
    height: 100%;
}
.chat-container{
    width: 100%;
    height: 100%;
    background-color: #F4F4F4;
    padding-top: 40rpx;
}

.user-info-container{
    padding: 0 30rpx;
    display:flex;
    justify-items: center;
    align-items: center;
}

.user-avatar{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.user-name{
    font-size: 26rpx;
    color: #9B9B9B;
    letter-spacing: 0.13px;
    padding-left: 20rpx;
}
.chat-message-container{
    width: auto;
    max-width: 60%;
    display: inline-block;
    font-size: 28rpx;
    background-color: #FFFFFF;
    color: #4A4A4A;
    letter-spacing: 0.13px;
    line-height: 23px;
    margin-left: 130rpx;
    padding: 30rpx 40rpx;
}

.user-chat-container{
    max-width: 80%;
    background-color:#FFFFFF;
    font-size: 28rpx;
    color: #4A4A4A;
    letter-spacing: 0.13px;
    line-height: 23px;
}

.send-message-container{
    width: 100vw;
}

.iceland-video-input-placeholder{
    color: rgba(255,255,255,0.70);
    opacity: 0.8;
    font-size: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}