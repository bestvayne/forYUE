/* pages/landing/landing.wxss */
page{
    width: 100%;
    height: 100%;
}
.full-screen{
    width: 100%;
    height: 100%;
    position: relative;
}

.landing-page-container{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    background-image: url("https://7072-promote-iceland-5g1bnckvaac9cfc3-1305448055.tcb.qcloud.la/promote-Iceland/landing-bg.png?sign=f80fcb535b2cf8d2b0ed0e0e05892f84&t=1617206512");
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.landing-page-logo{
    width: 50%;
    height: 10%;
}

.landing-page-text{
    writing-mode: vertical-rl;
    letter-spacing:20rpx;
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #FFFFFF;
    text-align: center;
    text-shadow: 1px 1px 1px rgba(0,0,0,0.25);
}

.landing-page-input{
    display: flex;
    justify-content:center;
    width: 500rpx;
    height: 100rpx;
    background: rgba(0,0,0,0.20);
    border: 1px solid #D0D9D7;
    margin-bottom: 15px;
    color: #FFFFFF;
    font-weight: 600;
    text-align: center;
    font-size: 40rpx;
}

.landing-page-input::after{
    color: rgba(255,255,255,0.70);
    opacity: 0.8;
    font-size: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.landing-page-input-placeholder{
    color: rgba(255,255,255,0.70);
    opacity: 0.8;
    font-size: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.landing-page-button{
    width: 500rpx!important;
    height: 100rpx!important;
    background: rgba(255,255,255,0.95);
    border-radius: 0;
    border: 1px solid #D0D9D7;
    font-size: 36rpx;
    font-weight: 600;
    color: #373D40;
    letter-spacing: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.go-to-form-container{
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

.go-to-form{
    text-align: center;
    font-size: 28rpx;
    color: #FFFFFF;
    letter-spacing: 0.3px;
    text-shadow: 0 2px 4px rgba(0,0,0,0.50);
    margin-top: 40rpx;
}

.diving-line{
    margin-top: 10rpx;
    border-bottom: 1px solid #FFFFFF;
    width: 65%;
}
